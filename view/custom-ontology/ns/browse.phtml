<?php
/**
 * @var \Laminas\View\Renderer\PhpRenderer $this
 * @var \Omeka\Api\Representation\VocabularyRepresentation[] $ontologies
 */

$plugins = $this->getHelperPluginManager();
$url = $plugins->get('url');
$translate = $plugins->get('translate');

$this->headLink()->prependStylesheet($this->assetUrl('css/custom-ontology.css', 'CustomOntology'));
?>

<h3><?= $translate('List of custom ontologies') ?></h3>
<?php if (!count($ontologies)): ?>
<p><?= $translate('There are no custom ontology.') ?></p>
<?php else: ?>
<ul>
<?php foreach ($ontologies as $ontology): ?>
    <li>
        <dt><?= $ontology->label() ?></dt>
        <dd><?= sprintf($translate('%1$s (%2$shuman%5$s | %3$sturtle%5$s | %4$sjson-ld%5$s) [recommended prefix: %6$s]'),
            $ontology->namespaceUri(),
            '<a href="' . $url('ns/prefix', ['prefix' => $ontology->prefix()]) . '">',
            '<a href="' . $ontology->namespaceUri() . '?format=turtle" type="text/turtle">',
            '<a href="' . $ontology->apiUrl() . '" type="application/ld+json">',
            '</a>',
            '<strong>' . $ontology->prefix() . '</strong>'
        ) ?></dd>
    </li>
<?php endforeach; ?>
</ul>
<?php endif;
